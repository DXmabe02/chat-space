.chat-main

  .main-header
    .main-header__left-bok
      %h2.main-header__left-bok__current-group
        = @group.name
      %ul.main-header__left-bok__menber-lis
        Menberï¼š
        %li.main-header__left-bok__menber-list__menber
          -@group.group_users.each do |group_user| 
            = group_user.user.name
    = link_to edit_group_path(params[:group_id]), class: "main-header__edit-btn" do
      Edit

  .messages
    = render @messages

  .form
    .new_message
      = form_for [@group, @message] do |f|
        .input-box
          = f.text_field :content, class: "input-box__text", placeholder: 'type a message'
          = f.label :image, class: "input-box__image" do
            = icon('fas', 'image',class: 'icon')
            = f.file_field :image, class: 'input-box__image__file'
        = f.submit 'Send', class: 'submit-btn'

