.side-bar
  .header-left
    .header-left__box
      %p.header-left__box__name
        = current_user.name
      %ul.header-left__box__icom
        %li.header-left__box__icom__group
          = link_to new_group_path do
            =icon('fas', 'edit')
        %li.header-left__box__icom__account
          = link_to edit_user_path(current_user) do
            =icon('fas', 'cog')

  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          %p.group__name
            = group.name
          %p.group__message
            まだメッセージはありません